html,
body
    height 100%

.bar-header
    background #243238
    padding rem(10px) rem(15px)
    position fixed
    width 100%
    z-index 10
    transition top 0.5s
    top 0
    +above(cut)
        padding rem(15px) rem(0px)
    .logo
        margin 0
        height rem(32px)
        line-height rem(26px)
    .logo a
        color accentDark
        text-decoration none
        font-size rem(26px)
        font-weight 100
    .icon-menu
        float left
        cursor pointer
        margin rem(5px) rem(20px) rem(5px) 0
        width rem(20px)
        height rem(20px)
        fill accentDark
        +above(cut)
            margin rem(5px) rem(20px) rem(5px) rem(25px)
    .dosearch
        float right
        display inline-block
        width rem(30px)
        height rem(30px)
        cursor pointer
        margin 0 0 0 0
        +above(cut)
            margin 0 rem(20px) 0 0

    .icon-search
        width rem(20px)
        height rem(20px)
        fill accentDark
        margin rem(5px)

body.main-page
    background-color #f3f3f3
    .bar-header
        background-color #243238
        
.overlay
    position fixed
    width 100%
    height 100%
    top 0
    right 0
    left 0
    bottom 0
    pointer-events none
    background rgba(0, 0, 0, 0.6)
    z-index 17
    opacity 0
    transition all 0.3s
    &.show
        pointer-events auto
        opacity 1

.section-hero 
    background #243238
    height 400px;
    display flex;
    justify-content center;
    flex-direction: column-reverse
    margin: auto
    text-align: center
    padding 75px 25px 20px;    
    .section-title 
        font-size 40px;
        color #02afff;    
        font-family 'Titillium Web','Helvetica Neue',Helvetica,sans-serif;
        font-weight 100   
        line-height 1.3em
        margin: auto;
        border: 1px solid #02afff;
        padding: 5px 40px;
    .symbol
        margin: auto

@media (max-width:500px)
    .section-hero .section-title 
        font-size: 34px
    .section-hero
        padding: 60px 25px 20px
        height: 350px
